pipeline {
    agent any

    stages {
        stage('cleaning environment') {
            steps {
                sh '''
                docker rmi -f $(docker images -a -q)
                '''
            }
        }



        stage('build the image') {
            steps {
                sh '''
                docker built -t kelly:001

                '''
            }
        }

        stage('checking images') {
            steps {
                sh '''
               docker images

                '''
            }
        }
    }
}
